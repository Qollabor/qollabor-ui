{
  "id": "https://www.ncia.nato.int/tdyrequest-schema#",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "TDY Request",
  "description": "TDY Request form",
  "type": "object",
  "properties": {
    "Requestor": {"type": "string"},
    "PassNo": {"type": "string"},
    "DepartureDate": {"type": "string", "format": "date"},
    "DeparturePoint": {"type": "string"},
    "ReturnDate": {"type": "string", "format": "date"},
    "Destination": {
      "type": "array",
      "minItems": 1,
      "items": {"type": "string"},
      "addLabel": "Add new destination"
    },
    "Purpose": {"type": "string"},
    "MeetingStartDate": {"type": "string", "format": "date"},
    "MeetingStartTime": {"type": "string", "format": "time", "title": "Meeting start time"},
    "MeetingEndDate": {"type": "string", "format": "date"},
    "MeetingEndTime": {"type": "string", "format": "time"},
    "DurationIncLeave": {"type": "integer"},
    "ModeOfTransport": {"type": "string", "enum": ["Air", "Hire car", "Public transport", "Shuttle", "POMV", "Other"]},
    "IMIS-code": {"type": "string"},
    "IMIS-activity-code": {"type": "string"},
    "AdvanceRequired": {"type": "boolean"},
    "Justification": {"type": "string"},
    "PointOfContact": {"type": "string"},
    "RequestDate": {"type": "string", "format": "date"},
    "CaseTeam": {
      "title": "Case Team",
      "type": "array",
      "minItems": 1,
      "items": {"$ref": "#/definitions/teammember"},
      "addLabel": "Add new case team"
    }
  },
  "definitions": {
    "teammember": {
      "title": "teammember",
      "type": "object",
      "properties": {
        "Name": {"type": "string"},
        "Roles": {"type": "array", "items": {"type": "string"}, "minItems": 1, "addLabel": "Add new role"},
        "Email": {"type": "string"}
      }
    }
  }
}
