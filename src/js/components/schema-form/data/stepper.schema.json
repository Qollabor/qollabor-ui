                    "Poland",
                    "Portugal",
                    "Romania",
                    "Slovakia",
                    "Slovenia",
                    "Spain",
                    "Turkey",
                    "United Kingdom",
                    "USA"
                  ],
                  "enum": [
                    "AL",
                    "BE",
                    "BU",
                    "CA",
                    "HR",
                    "CZ",
                    "DA",
                    "EN",
                    "FR",
                    "GE",
                    "GR",
